<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Chatbot de Viajes</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
        }

        form {
            margin-bottom: 20px;
        }

        .result {
            background-color: #f9f9f9;
            padding: 15px;
            border: 1px solid #ddd;
            margin-top: 20px;
        }
    </style>
</head>
<body>

    <h1>Bienvenido al Chatbot de Viajes</h1>
    <form method="POST" action="/chatbot">
        <label for="city">Ciudad:</label>
        <input type="text" id="city" name="city" required placeholder="Ingresa la ciudad"><br><br>

        <label for="currency">Moneda:</label>
        <input type="text" id="currency" name="currency" required placeholder="Ej: USD"><br><br>

        <label for="adults">NÃºmero de adultos:</label>
        <input type="number" id="adults" name="adults" required value="1" min="1"><br><br>

        <input type="submit" value="Buscar">
    </form>

    {% if airbnb_properties %}
    <div class="result">
        <h2>Propiedades de Airbnb en {{ city }}</h2>
        <ul>
            {% for property in airbnb_properties.get('data', []) %}
                <li>{{ property['name'] }} - Precio: {{ property['price'] }} {{ currency }}</li>
            {% endfor %}
        </ul>
    </div>
    {% endif %}

    {% if booking_attractions %}
    <div class="result">
        <h2>Atracciones de Booking en {{ city }}</h2>
        <ul>
            {% for attraction in booking_attractions.get('attractions', []) %}
                <li>{{ attraction['name'] }}</li>
            {% endfor %}
        </ul>
    </div>
    {% endif %}

</body>
</html>
